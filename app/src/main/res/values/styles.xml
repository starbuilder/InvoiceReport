<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->


    <!-- Application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
    </style>

    <style name="mainButton" parent="android:style/Widget.Button">
        <item name="android:textSize">@dimen/mian_button_textSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
    </style>
      <style name="spinnerStyle" parent="android:style/Widget.Spinner">
        <item name="android:textSize">@dimen/dialog_textSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#009688</item>
    </style>
    <style name="toolbarStyle"  >
         <item name="android:background">#2196F3</item>
         <item name="android:textColorPrimary">#ffffff</item>
         <item name="android:textSize">@dimen/toolbar_textSize</item>
    </style>
</resources>
